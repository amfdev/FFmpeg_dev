{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test nasa",
            "type": "process",
            "command": "${workspaceRoot}/_build_FFmpeg-mingw_gcc_x64-debug/ffmpeg_g.exe",
            "args": [
                "-y", "-hwaccel", "d3d11va", "-hwaccel_output_format", "d3d11", "-i", "nasa_720p.264", "-an", "-c:v", "h264_amf", "out.mkv"
            ],
            "options": {
                "cwd": "${workspaceFolder}/test_nasa"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "build debug mingw_gcc_x64",
            "type": "shell",
            "args": [
                "mingw_gcc_x64",
                "build",
                "debug"
            ],
            "command": "./scripts/build_FFmpeg.sh",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build release mingw_gcc_x64",
            "type": "shell",
            "args": [
                "mingw_gcc_x64",
                "build",
                "release"
            ],
            "command": "./scripts/build_FFmpeg.sh",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "rebuild debug mingw_gcc_x64",
            "type": "shell",
            "args": [
                "mingw_gcc_x64",
                "rebuild",
                "debug"
            ],
            "command": "./scripts/build_FFmpeg.sh",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "rebuild release mingw_gcc_x64",
            "type": "shell",
            "args": [
                "mingw_gcc_x64",
                "rebuild",
                "release"
            ],
            "command": "./scripts/build_FFmpeg.sh",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}

